  .margin-top-zero{ id: "main-container" }
    .home{ id: "home" }
      .clearfix
        .home-cal-assets

        .mf-cal-custom-home
          %div{ style: "padding-top: 20px" }
            .home-manualinput-cfinfo
              %section{ id: "cf-manual-entry" }
                %h2.heading-normal{ style: "margin: 0 0 11px" }
                  カンタン入力
                %div{ id: "cf-manual-payment-entry" }
                  .background

        .mf-cal-custom-ad
