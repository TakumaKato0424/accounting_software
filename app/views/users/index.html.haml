.header
  .pfm-header
    %header.header-inner-container
      .upper-contents
        %h1.logo
          =link_to root_path do
            =image_tag("https://moneyforward.com/assets/header/mf_logo-89b7d92cf89e58343e2efe8b4724f589f7828b99ce64446bececd8eb4fe74e39.png", class: "logo-image", width: 200, height: 35, alt: "無料の家計簿、資産管理ツール　マネーフォワード")
        %nav.right-nav
          %ul.menu-items.nav-horizontal
            %li.menu-item.nav-item
              =link_to destroy_user_session_path, method: :delete, rel: "nofollow" do
                ログアウト
            %li.menu-item.nav-item
              =link_to new_user_session_path, rel: "nofollow" do
                サインイン
      .global-menu
        %ul.nav-horizontal
          %li.global-menu-item.nav-item
            =link_to root_path, class: "active" do
              %i.fas.fa-home
              ホーム
          %li.global-menu-item.nav-item
            =link_to root_path do
              %i.fas.fa-newspaper
              仕訳
          %li.global-menu-item.nav-item
            =link_to root_path do
              %i.fas.fa-chart-pie
              財務諸表
          %li.global-menu-item.nav-item
            =link_to root_path do
              %i.fas.fa-piggy-bank
              口座
          %li.global-menu-item.nav-item
            =link_to root_path do
              %i.fas.fa-cog
              設定
